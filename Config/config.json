{
  // ===== Wave Mode Settings =====
  "MaxPlayersWithoutPassword": 5,
  "AdminPasswordOverride": "glove",
  "DisableWaveOnFifthPlayer": true,
  "DisableSkillAutoBalanceInWaveMode": true,
  "DefaultZombieMode": true,

  // ===== Wave Voting Settings =====
  "WaveVoteThreshold": 0.5,
  
  // ===== Round Time Settings =====
  "EnableDynamicRoundTime": true,
  "BaseRoundTimeSeconds": 40,
  "RoundTimeIncrementPerBot": 3,
  "WaveThresholdForTimeIncrease": 10,
  
  // ===== Bot Spawn Settings =====
  "SpawnLimitCheckDelay": 1.0,
  "BotDifficultyChangeDelay": 0.15,
  
  // ===== Wave Scaling Settings =====
  "MinimumWaveIncrement": 1,
  "MinimumBotsPerWave": 1,
  "MaxFailuresBeforeReduction": 7,
  "WaveReductionPercentage": 10,
  
  // ===== Respawn System Settings =====
  "EnableAutoRespawn": true,
  "ShowRespawnMessages": true,
  "ShowRespawnEveryXDeaths": 1,

  // ===== Chat Messages Settings =====
  "ShowWaveStartMessages": true,
  "ShowWaveEndMessages": true,
  "ShowHelpMessages": true,
  "HelpMessageInterval": 60,
  
  // ===== Bot Quota Toggle Settings =====
  "EnableBotQuotaToggle": true,
  "BotQuotaNormal": 2,
  "BotQuotaDisabled": 0,
  
  // ===== Server Protection Settings =====
  "SaveServerCvars": true,
  "RestoreCvarsOnDisable": true,
  
  // ===== Player Management Settings =====
  "DisconnectCheckDelay": 0.5
}
